@model CinemaWeb.Models.Schedule

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Thêm lịch chiếu phim</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "ManageSchedules")">Lịch chiếu phim </a></li>
                    <li class="breadcrumb-item active">Thêm lịch chiếu phim </li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- /.container-fluid -->
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("Create", "ManageSchedules", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
                <div class="card card-success" id="main-card">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin lịch chiếu</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="form-group">
                        <div class="card-body">
                            <div class="row form-group">
                                <div class="row">
                                    <div class="col-6">
                                        <label for="id_room" style="align-self: end">Chọn rạp</label>
                                        @Html.DropDownList("id_room", (IEnumerable<SelectListItem>)ViewBag.Rooms, new { @class = "form-control" })
                                    </div>
                                    <div class="col-6">
                                        <label for="id_movie" style="align-self: end">Chọn phim</label>
                                        @Html.DropDownList("id_movie", (IEnumerable<SelectListItem>)ViewBag.Movies, new { @class = "form-control" })
                                    </div>

                                </div>
                            </div>
                            <div class=" row form-group">
                                <div class="row">
                                    <div class="col-6">
                                        <label for="date">Ngày chiếu</label>
                                        @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                                    </div>
                                    
                                </div>
                            </div>

                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
        </div>

        <!-- /.container-fluid -->

        <div class="content-header">
            <button type="submit" class="btn btn-success">Thêm</button>
            <a href="@Url.Action("Index", "ManageSchedules")">
                <button type="button" class="btn btn-dark">Quay về</button>
            </a>
        </div>
    }
</section>
<!-- /.content -->


