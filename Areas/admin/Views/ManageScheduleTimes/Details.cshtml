@model CinemaWeb.Models.ScheduleTime

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Chi tiết giờ chiếu phim</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "ManageScheduleTimes")">Giờ chiếu phim</a></li>
                    <li class="breadcrumb-item active">Chi tiết giờ chiếu phim</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- /.container-fluid -->
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="card card-indigo" id="main-card">
            <div class="card-header">
                <h3 class="card-title">Thông tin giờ chiếu phim</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <div class="form-group">
                <div class="card-body">
                    <div class="row form-group">
                        <div class="col-6">
                            <label>Giờ chiếu:&nbsp;&nbsp;</label>
                            @Html.DisplayFor(model => model.time.ToString("HH:mm"))
                        </div>
                        <div class="col-6">
                            <label>Lịch chiếu:&nbsp;&nbsp;</label>
                            @Html.DisplayFor(model => model.Schedule.id)
                        </div>
                    </div>
                    
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->

    <div class="content-header">
        <a href="@Url.Action("Edit", "ManageScheduleTimes", new { id = Model.id })">
            <button type="button" class="btn btn-warning">Chỉnh sửa</button>
        </a>
        <a href="@Url.Action("Index", "ManageScheduleTimes")">
            <button type="button" class="btn btn-dark">Quay về</button>
        </a>
    </div>

</section>
<!-- /.content -->

@section Scripts {
    <script>
        $(document).ready(function () {
            var mainHeight = $('#main-card').height();
            var subHeight = $('#sub-card').height();
            var imgHeight = $('#img-preview').height();
            $('#img-preview').height(imgHeight - subHeight + mainHeight);
        });
    </script>